{% extends 'base.html.twig' %}

{% block title %}Zaloguj się{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-4"> 
                <h1 class="h3">Logowanie</h1>                
            </div>
            <div class="col-4"> 
                <a class="btn btn-primary align-middle" href="{{ url('signup') }}">Załóż konto</a>  
            </div>
        </div>
        {{ form_start(form) }}
        <div class="row justify-content-center">
            <div class="col-4">
                {{ form_label(form.login) }}
            </div>
            <div class="col-4"> 
                {{ form_errors(form.login) }}
                {{ form_widget(form.login) }}
                {{ form_help(form.login) }}
            </div>
        </div>
        <div class="row justify-content-center">  
            <div class="col-4">
                {{ form_label(form.password) }}
            </div>
            <div class="col-4"> 
                {{ form_errors(form.password) }}
                {{ form_widget(form.password) }}
                {{ form_help(form.password) }}
            </div>

        </div>
        <div class="row justify-content-center">  
            <div class="col-4">                   
                {{ form_label(form.submit) }}
                {{ form_widget(form.submit) }}
            </div>
            <div class="col-4">   
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
